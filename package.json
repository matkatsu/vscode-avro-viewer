{
	"name": "vscode-avro-viewer",
	"displayName": "Avro Viewer for VS Code",
	"description": ".avro file viewer for VS Code",
	"version": "0.0.3",
	"publisher": "romiogaku",
	"repository": "https://github.com/romiogaku/vscode-avro-viewer",
	"engines": {
		"vscode": "^1.31.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:avro.preview"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "avro.preview",
				"title": "Preview Avro File"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "avro.preview",
					"group": "navigation",
					"when": "resourceExtname == .avro"
				}
			],
			"commandPalette": [
				{
					"command": "avro.preview",
					"when": "resourceExtname == .avro"
				}
			],
			"explorer/context": [
				{
					"command": "avro.preview",
					"when": "resourceExtname == .avro",
					"group": "myGroup@1"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	},
	"dependencies": {
		"avsc": "^5.4.7"
	}
}
